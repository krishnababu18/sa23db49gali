extends layout

block content
  h1= title
  - let des = `dispatch(\"/icecream/create\")`
  button.btn( class="btn-primary ml-1", onclick= des) Create
  -
    let items  = results
  div(class= "container-fluid")
    div(class = "row m-1")
      each item,index in items
        - let destination = `dispatch(\"/icecream/update?id=${item._id}\")`
        - let destination1 = `dispatch(\"/icecream/detail?id=${item._id}\")`
        - let destination2 = `dispatch(\"/icecream/delete?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") Item #{item.icecream_flavour}(#{item.icecream_quantity}) is #{item.icecream_cost}
        button.btn( class="btn-primary ml-1", onclick= destination) Update
        button.btn( class="btn-primary ml-1", onclick= destination1) Detail
        button.btn( class="btn-primary ml-1", onclick= destination2) Delete
        
  script.
    function dispatch(path){
      window.location.href=path
    }